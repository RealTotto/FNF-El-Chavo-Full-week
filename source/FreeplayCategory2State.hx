class SongMetadataCool
{
	public var songName:String = "";
	public var week:Int = 0;
	public var songCharacter:String = "";
	public var color:Int = -7179779;
	public var colors:Int = -7179779;

	public function new(song:String, week:Int, songCharacter:String, ?colors:Int)
	{
		this.songName = song;
		this.week = week;
		this.songCharacter = songCharacter;
		this.color = FreeplayCategory2State.coolColors[week];
		this.colors = colors;
	}
}